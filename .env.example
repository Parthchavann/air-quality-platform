# API Keys
OPENAQ_API_KEY=your_openaq_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
IQAIR_API_KEY=your_iqair_api_key_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_AIR_QUALITY=air-quality-stream
KAFKA_TOPIC_WEATHER=weather-stream
KAFKA_TOPIC_ALERTS=pollution-alerts

# Spark Configuration
SPARK_MASTER=spark://spark-master:7077
SPARK_APP_NAME=AirQualityProcessor
SPARK_CHECKPOINT_DIR=/tmp/spark-checkpoints

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=airquality
POSTGRES_USER=airquality_user
POSTGRES_PASSWORD=secure_password

# Delta Lake
DELTA_LAKE_PATH=/data/delta

# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=50000
AIRFLOW_WEBSERVER_SECRET_KEY=your_secret_key_here

# Streamlit Configuration
STREAMLIT_PORT=8501

# Alert Configuration
ALERT_EMAIL_FROM=alerts@airquality.com
ALERT_EMAIL_TO=admin@airquality.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Twilio (optional for SMS alerts)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+0987654321

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Cities to monitor (comma-separated)
MONITORED_CITIES=New York,Los Angeles,Chicago,London,Paris,Tokyo,Delhi,Beijing